  "Class Features": [
    {
      "name": "Spellcasting",
      "desc": "Your spellcasting is based on your Charisma. You can use an arcane focus as a spellcasting focus for your sorcerer spells."
    },
    {
      "name": "Sorcerous Origin",
      "desc": "Choose a sorcerous origin that grants you features at 1st, 6th, 14th, and 18th level."
    },
    {
      "name": "Font of Magic",
      "desc": "You gain sorcery points and can use them to create spell slots or convert spell slots to sorcery points."
    },
    {
      "name": "Metamagic",
      "desc": "At 3rd level, you gain Metamagic options to modify your spells. You gain additional options at 10th and 17th level."
    },
    {
      "name": "Ability Score Improvement",
      "desc": "At 4th, 8th, 12th, 16th, and 19th level, you can increase one ability score by 2 or two ability scores by 1."
    },
    {
      "name": "Sorcerous Versatility (Optional)",
      "desc": "At levels where you gain an Ability Score Improvement, you can replace a Metamagic option or a cantrip."
    },
    {
      "name": "Magical Guidance (Optional)",
      "desc": "At 5th level, you can reroll a failed ability check by spending 1 sorcery point."
    },
    {
      "name": "Sorcerous Restoration",
      "desc": "At 20th level, you regain 4 expended sorcery points whenever you finish a short rest."
    }
  ],
